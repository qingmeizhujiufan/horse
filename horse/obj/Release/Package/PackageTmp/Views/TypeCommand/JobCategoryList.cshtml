@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_Layout_PC.cshtml";
}

<style type="text/css">
    .table th, .table td {
        text-align: center;
        vertical-align: middle !important;
    }
</style>

<!-- 页面头部  -->
<div class="header">
    @{Html.RenderAction("Top", "AdminManage", new { section = "7" });}
</div>

<!-- 页面主题内容  -->
<div class="wrap-content">
    <div class="side-left">
        @{Html.RenderAction("Aside", "AdminManage", new { menu_id = "8_1" });}
    </div>
    <div class="container side-content">
        <div class="row-fluid">
            <div id="content" class="animated fadeInRight">
                <div class="span12">
                    <div class="ibox-title">
                        <h5>岗位列表</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th rowspan="2" class="span1"></th>
                                    <th rowspan="2" class="span3">岗位名称</th>
                                    <th rowspan="2" class="span3">公司名称</th>
                                    <th rowspan="2" class="span2">薪酬</th>
                                    <th colspan="3">返费详情</th>
                                    <th rowspan="2" class="span2"></th>
                                </tr>
                                <tr>
                                    <th>返费方式</th>
                                    <th>返利方式</th>
                                    <th>返费时间</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td data-bind="text: '影视演员5到10名'"></td>
                                    <td data-bind="text: '新能影视公司'"></td>
                                    <td data-bind="text: '50元/天'"></td>
                                    <td data-bind="text: '一次性返利'"></td>
                                    <td data-bind="text: '4000/人'"></td>
                                    <td data-bind="text: '22天后'"></td>
                                    <td>
                                        <a style="color: #01D1BA;">查看</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var viewModel = {
    };

    viewModel.load = function () {
    };

    ko.applyBindings(viewModel, $('#content')[0]);

    viewModel.load();
</script>
