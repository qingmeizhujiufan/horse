        $._messengerDefaults = {
            extraClasses: 'messenger-fixed messenger-theme-flat messenger-on-top'
        };
        window.alert = function (message) {
            $.globalMessenger().post({
                message: message,
                hideAfter: 3,
                showCloseButton: true
            });
        };
    </script>
